</head>

<body>
    <nav class="navbar">
        <div class="container">
            <a class="navbar-brand" href="/">dirEngine.</a>

        </div>
    </nav>


    <div class="login-text">
        LOGIN
        <div class="abler">
            <h4 class="abler-text">Incorrect</h4>
        </div>
    </div>

    <div class="login-page">
        <div class="form">
            <form class="register-form hidden">
                <input id='name' type="text" placeholder="name" />
                <input id='email' type="text" placeholder="email address" />
                <input id='password' type="password" placeholder="password" minlength="8" />
                <input id='passwordConfirm' type="password" placeholder="password confirm" minlength="8" />
                <button>create</button>
                <p class="message">Already registered? <a href="#">Sign In</a></p>
            </form>
            <form class="login-form">
                <input id='email1' type="text" placeholder="email" />
                <input id='password1' type="password" placeholder="password" />
                <button>login</button>
                <a style='color:#4CAF50; text-decoration:none' href="/forgotPassword">Forgotten password?</a>
                <p class="message">Not registered? <a href="#">Create an account</a></p>
            </form>
            <div class="divider d-flex align-items-center justify-content-center my-2">
                <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
            </div>

            <a data-mdb-ripple-init class="btn btn-primary btn-lg btn-block w-100" style="background-color: #dd4b39"
                href="api/v1/user/login/google" role="button">
                <i class="fab fa-twitter me-2"></i>Continue with Google</a>
        </div>
    </div>
