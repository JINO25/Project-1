<%- include('header'); -%>
	<!-- END nav -->

	<div class="hero-wrap js-fullheight" style="background-image: url('images/bg_3.jpg');">
		<div class="overlay"></div>
		<div class="container">
			<div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center"
				data-scrollax-parent="true">
				<div class="col-md-9 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
					<p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span
							class="mr-2"><a href="index.html">Home</a></span> <span>Tour</span></p>
					<h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
						Destination
					</h1>
				</div>
			</div>
		</div>
	</div>


	<section class="ftco-section ftco-degree-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 sidebar ftco-animate">
					<div class="sidebar-wrap bg-light ftco-animate">
						<h3 class="heading mb-4">Find City</h3>
						<form id="searchForm">
							<div class="fields">
								<div class="form-group">
									<input type="text" id="destination" class="form-control"
										placeholder="Destination, City">
								</div>
								<div class="form-group">
									<input type="date" id="date" placeholder="Date from">
								</div>
								<div class="form-group">
									<div class="range-slider">
										<span>
											<input id="minPrice" type="number" value="800000" min="500000"
												max="5000000" /> -
											<input id="maxPrice" type="number" value="4000000" min="500000"
												max="10000000" />
										</span>
										<input id="minRange" value="800000" min="500000" max="9000000" step="100000"
											type="range" />
										<input id="maxRange" value="4000000" min="500000" max="10000000" step="100000"
											type="range" />
									</div>
								</div>
							</div>
							<div class="form-group">
								<a href="/search" class="btn btn-primary py-3 px-5">SEARCH</a>
							</div>
						</form>

					</div>
				</div>
				<div class="col-lg-9">
					<div class="row">
						<% tours.forEach(function(tour){ %>
							<div class="col-md-4 ftco-animate">
								<div class="destination">
									<a href='/tour/<%= tour.slug %>'
										class="img img-2 d-flex justify-content-center align-items-center"
										style="background-image: url(img/tour/<%=tour.imageCover%>);">
										<div class="icon d-flex justify-content-center align-items-center">
											<span class="icon-search2"></span>
										</div>
									</a>
									<div class="text p-3">
										<div class="d-flex">
											<div class="one">
												<h3><a href="#">
														<%= tour.name %>
													</a></h3>
												<p class="rate">
													<i class="icon-star"></i>
													<i class="icon-star"></i>
													<i class="icon-star"></i>
													<i class="icon-star"></i>
													<i class="icon-star-o"></i>
													<span>
														<%= tour.ratingsQuantity %> Rating
													</span>
												</p>
											</div>
										</div>
										<!-- <p>
											<%= tour.description %>>
										</p> -->
										<p class="startDate">
											<span>
												<i class="fa-regular fa-calendar-days"></i>
												Ngày khởi hành:
												<% for(let i=0; i<tour.startDate.length; i++) { %>
													<%= tour.startDate[i].date %>
														<% } %>
											</span>
										</p>
										<p class="days">
											<span>
												<i class="fa-regular fa-clock"></i>
												<%= tour.duration %>
											</span>
										</p>
										<p class="seats">
											<span>
												<i class="fa-regular fa-user"></i>
												Số chỗ còn nhận: <%= tour.quantity%>
											</span>
										</p>
										<div class="two">
											<span class="price">
												<%= tour.price.toLocaleString() %>đ/Khách
											</span>
										</div>
										<hr>
										<p class="bottom-area">
											<span><i class="icon-map-o"></i>Nơi khởi hành: <%= tour.startLocation %>
											</span>
											<span class="ml-auto" style="display: flex; justify-content: flex-end;"><a
													href="tour/<%=tour.slug%>">Đặt Ngay</a></span>
										</p>
									</div>
								</div>
							</div>
							<% }) %>


					</div>
					<div class="row mt-5">
						<div class="col text-center">
							<div class="block-27">
								<ul>
									<li><a href="#">&lt;</a></li>
									<li class="active"><span>1</span></li>
									<li><a href="#">2</a></li>
									<li><a href="#">3</a></li>
									<li><a href="#">4</a></li>
									<li><a href="#">5</a></li>
									<li><a href="#">&gt;</a></li>
								</ul>
							</div>
						</div>
					</div>
				</div> <!-- .col-md-8 -->
			</div>
		</div>
	</section> <!-- .section -->

